#! /usr/bin/perl

# ----------------------------------------------------------------------
# grid2Merlin
# ============
#
# Usage:   ~/mu3e/mu3eanca/perl/relinkBinFiles [-u URI] [-f fileWithURIs -g gridLocation] [-o merlindir] [-w 1] [-d] [-s startPattern]
#
# Example: ../perl/grid2Merlin \
#          -f signal \
#          -g http://hepgrid11.ph.liv.ac.uk/dpm/ph.liv.ac.uk/home/mu3e.org/mu3e.org/prod/build4.4.3/signal/ \
#          -o merlin-l-002:/data/experiment/mu3e/mc/build_4.6/signal
#
#
# History
#         2023/07/12 add -w, -d, -s, and skipping '#' lines in fileWithURIs
#         2023/07/11 first shot
# ----------------------------------------------------------------------
# Send all questions, wishes and complaints to the 
#
# Author    Urs Langenegger <urslangenegger@gmail.com>
# ----------------------------------------------------------------------
use Cwd;
my $dir = getcwd;

use Getopt::Std;
getopts('df:g:o:s:u:w:');

# -- default values
my $merlindir = "langenegger\@merlin-l-002:/data/experiment/mu3e/mc/build_4.6/signal";
my $gridLoc   = "http://hepgrid11.ph.liv.ac.uk/dpm/ph.liv.ac.uk/home/mu3e.org/mu3e.org/prod/build_4.6/signal"; 
my $waitSecs  = 1;
my $startPat  = "nada";
my $dbx       = 0;

my $uri = ""; 
my $urifile = ""; 
if ($opt_u) {
    $uri = $opt_u;
    ($urifile = $uri) =~ s{http.*/}{};
}

my @vFiles;
if ($opt_f) {
    open(IN, "$opt_f") || die "cannot open $opt_f for input\n";
    while (<IN>) {
        if (/#/) {next;}
        $_ =~ s/\n//;
        push(@vFiles, $_)
    }
    close(IN);
    if ($opt_g) {
        $gridLoc = $opt_g;
    }
}  

if ($opt_d) {
    $dbx = 1;
}  

if ($opt_o) {
    $merlindir = $opt_o;
}  

if ($opt_w) {
    $waitSecs = $opt_w;
}  

if ($opt_s) {
    $startPat = $opt_s;
}  

if ($opt_f) {
    my $skip = 1; 
    if ($startPat eq "nada") {
        $skip = 0;
    }
    foreach $file (@vFiles) {
        if ($skip == 1) {
            if ($file =~ $startPat) {
                $skip = 0;
            } else {
                next;
            }
        }
        if ($dbx > 0) {
            print("$file\n");
        } else {
            system("ssh t3ui01.psi.ch 'rm -f $file' ");
            system("ssh t3ui01.psi.ch 'wget $gridLoc/$file' ");
            system("scp t3ui01.psi.ch:$file $merlindir");
            system("ssh t3ui01.psi.ch 'rm -f $file' ");
        }
        sleep($waitSecs);
    }
} else {
    print("uri: $uri\n");
    print("urifile: $urifile\n");
    system("ssh t3ui01.psi.ch wget $uri");
    system("scp t3ui01.psi.ch:$urifile $merlindir");
}
